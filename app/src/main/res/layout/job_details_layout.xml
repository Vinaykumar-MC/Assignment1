<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include
    android:id="@+id/topBar"
    layout="@layout/top_bar"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        android:layout_marginStart="10dp"
        android:text="Job Discription"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtheading"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/jobDisrp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:autoSizeMaxTextSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                app:layout_constraintStart_toStartOf="@id/jobDisrp"
                app:layout_constraintTop_toBottomOf="@id/jobDisrp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtCompanyName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@id/companyName"
                app:layout_constraintTop_toBottomOf="@id/companyName"
                app:layout_constraintEnd_toEndOf="@id/jobDisrp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/locationHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                app:layout_constraintStart_toStartOf="@id/jobDisrp"
                app:layout_constraintTop_toBottomOf="@id/txtCompanyName"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@id/locationHeading"
                app:layout_constraintTop_toBottomOf="@id/locationHeading"
                app:layout_constraintEnd_toEndOf="@id/jobDisrp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/saleryHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                app:layout_constraintStart_toStartOf="@id/txtLocation"
                app:layout_constraintTop_toBottomOf="@id/txtLocation"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSalary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@id/saleryHeading"
                app:layout_constraintTop_toBottomOf="@id/saleryHeading"
                app:layout_constraintEnd_toEndOf="@id/jobDisrp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/contactHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                app:layout_constraintStart_toStartOf="@id/saleryHeading"
                app:layout_constraintTop_toBottomOf="@id/txtSalary"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtcontact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@id/contactHeading"
                app:layout_constraintTop_toBottomOf="@id/contactHeading"
                app:layout_constraintEnd_toEndOf="@id/jobDisrp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/experienceHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                app:layout_constraintStart_toStartOf="@id/txtcontact"
                app:layout_constraintTop_toBottomOf="@id/txtcontact"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtExperience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@id/experienceHeading"
                app:layout_constraintTop_toBottomOf="@id/experienceHeading"
                app:layout_constraintEnd_toEndOf="@id/jobDisrp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/eduHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                app:layout_constraintStart_toStartOf="@id/txtExperience"
                app:layout_constraintTop_toBottomOf="@id/txtExperience"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtQualification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:autoSizeMaxTextSize="19sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@id/eduHeading"
                app:layout_constraintTop_toBottomOf="@id/eduHeading"
                app:layout_constraintEnd_toEndOf="@id/jobDisrp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>